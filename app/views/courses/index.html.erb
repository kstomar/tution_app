<h1>Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Length of students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.content %></td>
        <td><%= course.start_datetime %></td>
        <td><%= course.end_datetime %></td>
        <td><%= course.length_of_students %></td>
        <td><%= link_to 'Show', course %></td>
        <% if current_user.teacher? %>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Join', "/request_courses?course_id=#{course.id}", method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', root_path %> |
<%= link_to 'New Course', new_course_path if current_user.teacher? %>
