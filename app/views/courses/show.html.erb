<div class = "container">
  <p>
    <strong>Title:</strong>
    <%= @course.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @course.content %>
  </p>

  <p>
    <strong>Start datetime:</strong>
    <%= @course.start_datetime %>
  </p>

  <p>
    <strong>End datetime:</strong>
    <%= @course.end_datetime %>
  </p>

  <p>
    <strong>Length of students:</strong>
    <%= @course.length_of_students %>
  </p>

  <h3>Comments</h3>
  <% @course.comments.each do |comment| %>
    <div>
      <strong><%= comment.user.email %></strong>
      <br>
      <p><%= comment.comment %></p>
      <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } if current_user == comment.user %></p>
    </div>
  <% end %>


  <%= render 'comments/form', comment: Comment.new, course_id: @course.id %>
  <%= link_to 'Edit', edit_course_path(@course) %> |
  <%= link_to 'Back', courses_path %>
</div>