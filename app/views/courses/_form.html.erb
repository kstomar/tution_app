    <%= form.label :content %>
    <%= form.text_field :content, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :start_datetime %>
    <%= form.datetime_select :start_datetime, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_datetime %>
    <%= form.datetime_select :end_datetime, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :length_of_students %>
    <%= form.number_field :length_of_students, class: "form-control" %>
  </div>

