<h1>Request Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Course</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @request_courses.each do |request_course| %>
      <tr>
        <td><%= request_course.user.name if current_user.teacher? %></td>
        <td><%= link_to "#{request_course.course.title}", request_course.course %></td>
        <td><%= request_course.status %></td>
        <td><%= link_to 'Show', request_course %></td>
        <td><%= link_to 'Edit', edit_request_course_path(request_course) if current_user.teacher? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', root_path %>

